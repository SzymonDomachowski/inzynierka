@model NotificationBox.Domain.Entities.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Wybor</title>
</head>
<body>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-danger">@TempData["message"]</div>
    }
    <label> Zaloz konto w serwiscie: </label>
    <div class="btn-group">
        <div>@Html.ActionLink("OK", "Account", null, new { @class = "btn btn-default btn-block" })</div>
    </div>
    <br/>
    <label> Lub zaloguj się, wpisując swoj Login </label>

        @using (Html.BeginForm("Login", "Home"))
        {
            <div class="form-group">
                @Html.TextBox("Login",null,new { @class="form-control"})
            </div>
            <div class="form-group">
                @Html.TextBox("Password",null,new { @class = "form-control", type ="password"})
            </div>
            <input class="btn btn-default form-group" type="submit" value="OK" />
        }

        
    
</body>
</html>
