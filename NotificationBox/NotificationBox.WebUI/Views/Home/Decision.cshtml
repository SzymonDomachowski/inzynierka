
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Decision</title>
</head>
<body>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    <div> 
        <label>Wybierz serwis który chcesz dodać do swojego pudełka.</label><br />
        <div class="btn-group">
            <div>@Html.ActionLink("Facebook", "FacebookAuthorization", null, new { @class = "btn btn-primary btn-block" })</div>
            <div>@Html.ActionLink("Instagram", "AuthorizeInstagramUser", "Instagram", null, new { @class = "btn btn-warning btn-block" })</div>
            <div>@Html.ActionLink("Gmail", "GmailAuthorization", null, new { @class = "btn btn-danger btn-block" })</div>
            <div>@Html.ActionLink("Twitter", "TwitterAuthorization", null, new { @class = "btn btn-success btn-block" })</div>
        </div>
    </div>
</body>
</html>
